<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management Dashboard</title>
    <style>

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }


        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 0;
        }

        .dashboard-container {
            width: 100%;
            height: 100vh;
            background-color: #fff;
            border: none;
            box-shadow: none;
            border-radius: 0;
            overflow: auto;
        }


        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #3f51b5;
            color: #fff;
            padding: 20px;
            font-weight: bold;
            position: sticky;
            top: 0;
            z-index: 1;
        }

        .header-tabs {
            display: flex;
            list-style-type: none;
        }

        .header-tabs li {
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .header-tabs li.active {
            background-color: #303f9f;
        }


        .content-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
            margin-top: 20px;
        }

        .content-table th,
        .content-table td {
            border: 1px solid #ddd;
            padding: 16px;
            text-align: left;
        }

        .content-table th {
            background-color: #f0f0f0;
            font-weight: bold;
            text-align: center;
        }


        .footer {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            background-color: #f0f0f0;
            padding: 16px 20px;
            position: sticky;
            bottom: 0;
        }

        .footer .logout {
            background-color: #e53935;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 14px;
        }

        .footer .logout:hover {
            background-color: #c62828;
        }


        @media (max-width: 1024px) {
            .header-tabs li {
                padding: 8px 16px;
                font-size: 14px;
            }

            .content-table th,
            .content-table td {
                padding: 12px;
                font-size: 12px;
            }

            .footer .logout {
                padding: 8px 16px;
                font-size: 12px;
            }
        }
    </style>
</head>

<body>
    <div class="dashboard-container">

        <div class="header">
            <ul class="header-tabs">
                <li class="active">Books</li>
                <li>Borrowers</li>
                <li>Loans</li>
                <li>Inventory</li>
                <li>Reports</li>
            </ul>
        </div>
        <div class="content-table-wrapper">
            <table class="content-table">
                <tr>
                    <th>Book ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>Available Copies</th>
                </tr>
                <% if (books.length===0) { %>
                    <tr>
                        <td colspan="5" style="text-align: center;">No books available</td>
                    </tr>
                    <% } else { %>
                        <% books.forEach(function(book) { %>
                            <tr>
                                <td>
                                    <%= book.id %>
                                </td>
                                <td>
                                    <%= book.title %>
                                </td>
                                <td>
                                    <%= book.author %>
                                </td>
                                <td>
                                    <%= book.genre %>
                                </td>
                                <td>
                                    <%= book.availableCopies %>
                                </td>
                            </tr>
                            <% }) %>
                                <% } %>
            </table>
        </div>
        <div class="footer">
            <button class="logout">Logout</button>
        </div>
    </div>
    <script>

        const headerTabs = document.querySelectorAll('.header-tabs li');
        headerTabs.forEach(tab => {
            tab.addEventListener('click', () => {

                headerTabs.forEach(t => t.classList.remove('active'));

                tab.classList.add('active');

            });
        });
    </script>
</body>

</html>